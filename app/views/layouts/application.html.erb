<!DOCTYPE html>
<html>
  <head>
    <title>IT 231 Demo W3CSS</title>
    
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body class="w3-container w3-light-blue">

    <div class="w3-bar w3-black">
      <a href="/" class="w3-bar-item w3-button w3-border">
        <%= image_tag 'mad-icon.png', alt: 'The Mad Icon', height: '28', width: '28', style: 'display: block; margin-left: auto; margin-right: auto; margin-bottom: none; margin-top: none' %></a>
      <a href="/static_pages/home" class="w3-bar-item w3-button w3-blue">Home</a>
      <a href="/" class="w3-bar-item w3-button w3-purple">Store</a>
      <a href="/static_pages/help" class="w3-bar-item w3-button w3-orange">Help</a>
      <a href="/static_pages/about" class="w3-bar-item w3-button w3-green">About</a>
      
      <a href="/carts" class="w3-bar-item w3-button w3-red">Carts</a>      
      <a href="/line_items" class="w3-bar-item w3-button w3-brown">LineItems</a>
 <%= link_to 'Login', login_path, method: :post, class:"w3-bar-item w3-button w3-border w3-lime"  %>
<% if session[:user_id] %>


<%= link_to 'Products', products_path, class:"w3-bar-item w3-button w3-border w3-yellow"  %>
<%= link_to 'Users', users_path, class:"w3-bar-item w3-button w3-border w3-light-blue"  %>
      
<%= link_to 'Logout', logout_path, method: :delete, class:"w3-bar-item w3-button w3-border"  %>
<% end %>

   </div>

   <div class="w3-container">
    <%= yield %>
   </div>    

  </body>
</html>
